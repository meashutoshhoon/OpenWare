<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="8dp">


    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:fontFamily="@font/en_light"
                android:padding="8dp"
                android:text="Request Submitted"
                android:textColor="#000"
                android:textSize="22.5sp" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_regular"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="Thank you for submitting your request for a verification badge. Our team will carefully review your account and the provided information. If everything aligns with our criteria, you will be granted the badge. We appreciate your interest in verification.\n\n Best regards,\n\n CodeKosh's Team"
                android:textColor="#424242"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/en_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="Proceed"
                android:textSize="16sp"
                android:theme="@style/ThemeOverlay.Material3.Button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
